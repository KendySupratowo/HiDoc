<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Layanan Kesehatan</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans">
    <!-- Navbar -->
    <nav class="bg-green-200 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/home">
                <h1 class="text-2xl font-bold text-green-700">HiDoc</h1>
                <a href="/layanan" class="text-green-700 hover:text-green-900">Layanan</a>
            </a>
            <div class="space-x-4">
                <span class="text-green-800 font-semibold">Halo, <%= user.username %>!</span>
                <a href="/profile" class="text-green-700 hover:text-green-900">Profile</a>
                <a href="/logout" class="text-green-700 hover:text-green-900 font-bold">Logout</a>
            </div>
        </div>
    </nav>
    <!-- Hero Section -->
    <section class="bg-green-100 py-12">
        <div class="container mx-auto">
            <h2 class="text-4xl font-bold text-green-800 mb-8 text-center">Daftar Poli yang Tersedia di HiDoc</h2>

            <!-- Poli Cards Section -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-4">
                <% data.forEach(el=> { %>
                    <div
                        class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition transform hover:-translate-y-1 duration-300 text-center">
                        <div class="bg-green-500 h-3 w-full"></div>
                        <div class="p-6">
                            <div class="flex flex-col items-center mb-4">
                                <div class="bg-green-100 p-3 rounded-full mb-3">
                                    <div class="text-4xl text-green-600">ðŸ©º</div>
                                </div>
                                <div class="text-center">
                                    <h3 class="text-xl font-bold text-green-700 mb-2">
                                        <%= el.poliName %>
                                    </h3>
                                    <div class="flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-1"
                                            viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd"
                                                d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                                                clip-rule="evenodd" />
                                        </svg>
                                        <p class="text-gray-600 font-medium">
                                            <%= el.doctorName %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-green-200 py-6">
        <div class="container mx-auto text-center">
            <p class="text-green-700">Â© 2025 HiDoc. Semua hak dilindungi.</p>
        </div>
    </footer>
</body>

</html>