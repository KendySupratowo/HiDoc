<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tambah Profil - HiDoc</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans">

    <!-- Navbar -->
    <nav class="bg-green-200 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/home">
                <h1 class="text-2xl font-bold text-green-700 hover:text-green-900 font-bold">HiDoc</h1>
            </a>
            <div>
                <a href="/diagnose/history" class="text-green-700 hover:text-green-900 font-bold">Riwayat</a>
                <a href="/logout" class="text-green-700 hover:text-green-900 font-bold">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Form Tambah Profil -->
    <section class="py-12">
        <div class="container mx-auto px-4">
            <div class="max-w-xl mx-auto bg-white p-8 rounded-lg shadow-md">
                <h2 class="text-2xl font-bold text-green-800 mb-6 text-center">Tambahkan Profil Anda</h2>

                <% if (errors && errors.length> 0) { %>
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
                        <ul>
                            <% errors.forEach(err=> { %>
                                <li>
                                    <%= err %>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>

                        <form action="/profile/add" method="POST" class="space-y-4">
                            <div>
                                <label for="name" class="block text-gray-700 font-medium mb-1">Nama</label>
                                <input type="text" name="name" id="name"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400" />
                            </div>

                            <div>
                                <label for="age" class="block text-gray-700 font-medium mb-1">Usia</label>
                                <input type="number" name="age" id="age"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400" />
                            </div>

                            <div>
                                <label class="block text-gray-700 font-semibold mb-1">Jenis Kelamin</label>
                                <select name="gender"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400">
                                    <option value="">-- Pilih --</option>
                                    <option value="Laki-laki">Laki-laki</option>
                                    <option value="Perempuan">Perempuan</option>
                                </select>
                            </div>

                            <div class="text-center pt-4">
                                <button type="submit"
                                    class="bg-green-500 text-white px-6 py-2 rounded-full hover:bg-green-600">Simpan
                                    Profil</button>
                            </div>
                        </form>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-green-200 py-6 mt-12">
        <div class="container mx-auto text-center">
            <p class="text-green-700">Â© 2025 HiDoc. Semua hak dilindungi.</p>
        </div>
    </footer>
</body>

</html>