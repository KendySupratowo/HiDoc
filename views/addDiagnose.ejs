<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8" />
    <title>Pilih Gejala - HiDoc</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans">
    <!-- Navbar -->
    <nav class="bg-green-200 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/home">
                <h1 class="text-2xl font-bold text-green-700">HiDoc</h1>
            </a>
            <div>
                <a href="/logout" class="text-green-700 font-bold hover:text-green-900">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Form Pilih Gejala -->
    <section class="py-12">
        <div class="container mx-auto max-w-xl bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold text-green-700 mb-6 text-center">Pilih Gejala yang Anda Alami</h2>
            <form action="/diagnose" method="POST" class="space-y-4" onsubmit="return validateForm()">
                <% symptoms.forEach(symptom=> { %>
                    <div>
                        <label class="inline-flex items-center">
                            <input type="checkbox" name="symptomIds" value="<%= symptom.id %>" class="form-checkbox">
                            <span class="ml-2">
                                <%= symptom.symptomName %>
                            </span>
                        </label>
                    </div>
                    <% }) %>
                        <button type="submit"
                            class="w-full bg-green-500 text-white py-2 rounded-md font-semibold hover:bg-green-600">Submit</button>
            </form>
        </div>
    </section>

    <script>
        function validateForm() {
            const checkboxes = document.querySelectorAll('input[name="symptomIds"]:checked');
            if (checkboxes.length === 0) {
                alert('Harap pilih setidaknya satu gejala sebelum submit!');
                return false;
            }
            return true;
        }
    </script>
</body>

</html>