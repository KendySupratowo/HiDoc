<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <title>Daftar Penyakit dan Gejalanya</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans">

    <div class="container mx-auto py-12">
        <h1 class="text-3xl font-bold text-green-700 mb-8 text-center">Daftar Penyakit & Gejala</h1>

        <table class="min-w-full bg-white border border-gray-200 shadow-md rounded-lg overflow-hidden">
            <thead class="bg-green-200">
                <tr>
                    <th class="text-left px-6 py-3 border">Nama Penyakit</th>
                    <th class="text-left px-6 py-3 border">Gejala Terkait</th>
                </tr>
            </thead>
            <tbody>
                <% diseases.forEach(disease=> { %>
                    <tr class="border-t">
                        <td class="px-6 py-4 text-green-800 font-medium">
                            <%= disease.diseaseName %>
                        </td>
                        <td class="px-6 py-4">
                            <ul class="list-disc pl-5 text-gray-700">
                                <% disease.Symptoms.forEach(symptom=> { %>
                                    <li>
                                        <%= symptom.symptomName %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

</body>

</html>