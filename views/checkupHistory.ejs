<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <title>Riwayat Checkup - HiDoc</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans">
    <!-- Navbar -->
    <nav class="bg-green-200 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/home">
                <h1 class="text-2xl font-bold text-green-700">HiDoc</h1>
            </a>
            <a href="/logout" class="text-green-700 font-bold hover:text-green-900">Logout</a>
        </div>
    </nav>

    <section class="py-10">
        <div class="container mx-auto max-w-4xl">
            <h2 class="text-3xl font-bold text-center text-green-700 mb-8">Riwayat Checkup Anda</h2>
            <% if (msg) { %>
                <p class="text-center text-green-600 font-bold">
                    <%= msg %>
                </p>
                <% } %>
                    <% if (checkups && checkups.length> 0) { %>
                        <div class="space-y-6">
                            <% checkups.forEach(c=> { %>
                                <div class="bg-white p-6 rounded-lg shadow-md relative border-l-4 border-green-400">
                                    <p class="text-sm text-gray-500 mb-2">Tanggal Checkup: <%=
                                            c.createdAt.toLocaleDateString("id-ID") %>
                                    </p>
                                    <div class="mt-4">
                                        <p class="font-semibold">Gejala yang Anda Pilih:</p>
                                        <ul class="list-disc list-inside text-sm text-gray-700">
                                            <% c.Symptoms.forEach(s=> { %>
                                                <li>
                                                    <%= s.symptomName %>
                                                </li>
                                                <% }) %>
                                        </ul>
                                    </div>

                                    <!-- Tombol Hapus -->
                                    <a href="/diagnose/<%= c.id %>/delete"
                                        onclick="return confirm('Yakin ingin menghapus riwayat ini?')"
                                        class="absolute top-4 right-4 text-red-500 hover:text-red-700">üóëÔ∏è
                                        Hapus</a>
                                </div>
                                <% }) %>
                        </div>
                        <% } else { %>
                            <p class="text-center text-gray-600">Belum ada riwayat checkup.</p>
                            <% } %>

                                <div class="text-center mt-8">
                                    <a href="/home" class="text-green-600 hover:underline">‚Üê Kembali ke Home</a>
                                </div>
        </div>
    </section>
</body>

</html>