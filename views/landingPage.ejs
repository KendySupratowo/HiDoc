                <div class="absolute inset-0 bg-green-100 opacity-20 rounded-lg"></div>
            </div>
        </div>
    </section>

    <!-- Layanan Kami -->
    <section class="py-12">
        <div class="container mx-auto text-center">
            <h3 class="text-3xl font-bold text-green-800 mb-8">Layanan Kami</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 px-4">
                <a href="/login" class="bg-white p-6 rounded-lg shadow-md hover:bg-green-50 transition">
