<body class="bg-gray-100 font-sans">

    <!-- Navbar -->
    <nav class="bg-green-200 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/">
                <h1 class="text-2xl font-bold text-green-700 hover:text-green-900 font-bold">HiDoc</h1>
            </a>
            <div>
                <a href="/login" class="text-green-700 hover:text-green-900 font-bold mr-4">Login</a>
